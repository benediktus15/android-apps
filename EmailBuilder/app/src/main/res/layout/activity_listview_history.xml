<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/historyNamaSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="adadaad"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginStart="11dp"
        android:layout_alignBottom="@+id/historyStatusSite"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/historyStatusSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="15dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp" />

    <TextView
        android:id="@+id/historyDateSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/historyNamaSite"
        android:layout_below="@+id/historyNamaSite"
        android:text="Date" />

</RelativeLayout>
