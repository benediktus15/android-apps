<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <!--<Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_sports"
        android:layout_marginTop="160dp"
        android:layout_gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search on Maps"
        android:layout_marginTop="10dp"
        android:id="@+id/search_on_maps_btn"
        android:layout_gravity="center"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/spinner_sports"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:textSize="20dp"
            android:text="Cabang Olahraga" />

        <Spinner
            android:id="@+id/spinner_sports"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonSearch"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonSearchAll"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="140dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_blue_light"
            android:textColor="@color/bright_foreground_material_dark"
            android:text="Search"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="211dp" />

        <Button
            android:id="@+id/buttonSearchAll"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@android:color/holo_blue_light"
            android:textSize="20dp"
            android:textColor="@color/bright_foreground_material_dark"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="Cari di Peta" />

    </RelativeLayout>

</LinearLayout>
